{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "features/**/*.ts", "step-definitions/getOrderQueue.steps.ts"], // Arquivos TypeScript incluídos na compilação
  "exclude": ["node_modules", "dist"] // Diretórios excluídos da compilação
}
